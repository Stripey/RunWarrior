<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <EditText
        android:id="@+id/nameEditText"
        android:hint="Enter Your Name"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"/>


    <EditText
        android:id="@+id/weightEditText"
        android:hint="Enter Your Weight"
        android:inputType="number"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/nameEditText"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/promptTextView"
        android:text="Select what your avatar looks like!"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/weightEditText"
        android:layout_marginTop="10dp"/>

    <RadioGroup
        android:id="@+id/avatarRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/promptTextView"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/avatarMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawable="@drawable/avatarmale"
            />

        <RadioButton
            android:id="@+id/avatarFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawable="@drawable/avatarfemale"
            />
    </RadioGroup>
</RelativeLayout>